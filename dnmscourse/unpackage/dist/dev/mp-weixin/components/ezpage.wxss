
page,page {

  margin: 0;

  padding:0;

  height: 100%;
}
.container {

  min-height:100%;

  height: auto !important;

  height: 100%; /*IE6不识别min-height*/

  position: relative;
}
.header {
    background: #ff0;

    padding: 10px;
}
.page {

    width: 100%;
	height: 100vh;

    margin: 0 auto;

    padding-bottom: 20px;/*等于footer的高度*/
}
.footer {

    position: absolute;

    bottom: 0;

    width: 100%;

    height: 20px;/*脚部的高度*/

    background: #6cf;

    clear:both;
}

