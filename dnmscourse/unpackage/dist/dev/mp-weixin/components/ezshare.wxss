
.clear_button:after {
	border: none;
}
.clear_button {
	border: none;
	bakcground:none;
	padding: 0px;
	margin: 0px;
	border-radius: 0px;
	line-height:inherit;
}
.ezshare {
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.3);
	position: absolute;
	z-index: 999999;
}
.ezshare>view {
	width: 100%;
	bottom: 0px;
	background:#FFFFFF;
	position: fixed;
}
.ezshare>view>view {
	text-align: center;
	font-size: 16px;
	height: 50px;
	line-height: 50px;
	color: #000000;
}
.ezshare>view>view.divider {
	border-bottom: 1px solid #F2F2F2;
}
.ezshare>view>view:nth-child(3) {
	color: #ff0000;
}

